  "compilerOptions": {
    "lib": ["ES2019", "WebWorker", "ScriptHost", "DOM", "DOM.Iterable"],
    "paths": {
      "@jupyter-widgets/*": [
        "./packages/*/src",
        "./python/jupyterlab_widgets/src"
      ]
    }
  },
  "extends": "./tsconfigbase",
  "references": [
    {
      "path": "./packages/base"
    },
    {
      "path": "./packages/base-manager"
    },
    {
      "path": "./packages/controls"
    },
    {
      "path": "./packages/html-manager"
    },
    {
      "path": "./packages/output"
    },
    {
      "path": "./python/jupyterlab_widgets"
    }
  ]
}
